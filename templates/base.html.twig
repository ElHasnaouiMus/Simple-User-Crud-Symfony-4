<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="/css/bootswatch/bootstrap.min.css">
			<link rel="stylesheet" href="/css/app.css">

		{% endblock %}
	</head>
	<body>

		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<div class="container">
				<ul class="navbar-nav">
					<a class="navbar-brand" href="{{ path('home') }}">ARTECH DEV TEST</a>
					{% if app.user %}
						<li class="nav-item active">
							<a class="nav-link" href="{{ path('list_users') }}">Gestion des Utilisateurs</a>
						</li>
					{% endif %}
				</ul>
				<div class="text-right">
					{% if not app.user %}
						<a href="{{path('security_login')}}">
							<button class="btn btn-success mx-2 my-2 my-sm-0" type="submit">Login</button>
						</a>
					{% else %}
						<span>
							<b>Bonjour
								{{ app.user.prenom }}</b>
						</span>
						<a href="{{path('registration')}}">
							<button class="btn btn-primary my-2 my-sm-0" type="submit">Add New User</button>
						</a>
						<a href="{{path('security_logout')}}">
							<button class="btn btn-danger my-2 my-sm-0" type="submit">Logout</button>
						</a>
					{% endif %}
				</div>
			</div>
		</nav>
		<div class="container mt-4">
			<div class="row"> {% block body %}{% endblock %}

				</div>
			</div>
			{% block javascripts %}{% endblock %}
		</body>
	</html>
